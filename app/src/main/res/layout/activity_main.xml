<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clearAllbutton"
            android:onClick="clearAllbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:text="AC"
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kokaltibutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_options"
            android:gravity="center"
            android:text="√"
            android:textSize="25dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clearbutton"
            android:onClick="clearbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:text="C"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divisionbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_options"
            android:gravity="center"
            android:text="÷"
            android:textSize="35dp"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sevenbutton"
            android:onClick="seven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="7"
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eightbutton"
            android:onClick="eight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="8"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ninebutton"
            android:onClick="nine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="9"
            android:textSize="25dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multiplicationbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_options"
            android:gravity="center"
            android:text="x"
            android:textSize="20dp"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fourbutton"
            android:onClick="four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="4"
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fivebutton"
            android:onClick="five"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="5"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sixbutton"
            android:onClick="six"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="6"
            android:textSize="25dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minusbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_options"
            android:gravity="center"
            android:text="-"
            android:textSize="35dp"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/onebutton"
            android:onClick="one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="1"
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/twobutton"
            android:onClick="two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="2"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/threebutton"
            android:onClick="three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="3"
            android:textSize="25dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plusbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_options"
            android:gravity="center"
            android:text="+"
            android:textSize="25dp"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dotbutton"
            android:onClick="dot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="."
            android:textSize="25dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zerobutton"
            android:onClick="zero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="0"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/doublezerobutton"
            android:layout_width="70dp"
            android:onClick="doubleZero"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_buttonesss"
            android:gravity="center"
            android:text="00"
            android:textSize="25dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equalsbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_options"
            android:gravity="center"
            android:text="="
            android:textSize="35dp"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="4" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/equationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>